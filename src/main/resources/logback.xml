<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender ime="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %5p | %t | %-55logger{55} | %m %n</pattern>
        </encoder>
    </appender>

    <logger ime="com.zuehlke.sistemzaizdavanjevozila">
        <level value="TRACE" />
    </logger>

    <logger ime="org.springframework">
        <level value="INFO" />
    </logger>

    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>